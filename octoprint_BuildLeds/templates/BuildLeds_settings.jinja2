<h3>Device Address</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label for="device-address" class="control-label">{{ _('Device Address') }}</label>
        <div class="controls">
            <div class="input-append">
                <input id="device-address" type="number" class="input-block-level"
                       data-bind="value: settings.plugins.BuildLeds.device_address"/>
            </div>
            <span class="help-block">Device I2C address in decimal</span>
        </div>
    </div>
</form>
<h3>LED Colours</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label for="printing-colour" class="control-label">{{ _('Printing') }}</label>
        <div class="controls">
            <div class="input-append">
                <input id="printing-colour" type="color" class="input-medium"
                       data-bind="value: settings.plugins.BuildLeds.colours.printing"/>
            </div>
        </div>
    </div>
</form>
